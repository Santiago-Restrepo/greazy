mixin producto(imgUrl, nombre, precio, mensaje)
    .product
        .product__image
            img(src=""+imgUrl, alt="")
            .contact
                a(href="https://www.instagram.com/__greazy__/?hl=es-la")
                    i.fab.fa-instagram
                a(href=""+mensaje)
                    i.fab.fa-whatsapp           
        span.product__name #{nombre}
        span.product__price #{precio}

