mixin producto(imgUrl, nombre, precio, mensaje, descuento)
    .product&attributes(attributes)
        .product__image
            img(loading="lazy", src=""+imgUrl, alt="")
            span.discount #{descuento}
            .contacto
                a(href="https://www.instagram.com/__greazy__/?hl=es-la" target="_blank" rel="noopener" alt="Enlace a instagram" name="Enlace a instagram")
                    i.fab.fa-instagram
                a(href="https://www.facebook.com/Greazy-streetwear-101671948261008" target="_blank" rel="noopener" alt="Enlace a facebook" name="Enlace a facebook")
                    i.fab.fa-facebook-f
                a(href=""+mensaje target="_blank" rel="noopener" alt="Enlace a Whatsapp" name="Enlace a Whatsapp")
                    i.fab.fa-whatsapp           
        span.product__name #{nombre}
        span.product__price #{precio}

mixin productoDoble(imgUrl, nombre, precio, mensaje, imgUrl2, descuento)
    .productDouble&attributes(attributes)
        .productDouble__image
            img(loading="lazy", src=""+imgUrl, alt="")
